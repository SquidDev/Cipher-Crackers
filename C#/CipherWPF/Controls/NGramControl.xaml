<UserControl x:Class="Cipher.WPF.Controls.NGramControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             mc:Ignorable="d" 
             d:DesignWidth="500" d:DesignHeight="190">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Metro:NumericUpDown x:Name="NGramLength" Minimum="2" Maximum="10" Value="2" VerticalAlignment="Stretch" Margin="0,5,125,5" />
            <Button Content="Calculate Ngrams" HorizontalAlignment="Right" Margin="0,5" Click="Go_Click" Width="115"/>
        </Grid>
        <DataGrid Grid.Row="1" IsReadOnly="True" ItemsSource="{Binding Frequencies}" AutoGenerateColumns="False" Margin="0,5">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Key}" Header="NGram"/>
                <DataGridTextColumn Binding="{Binding Value}" Header="Frequency" SortDirection="Descending"/>
            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</UserControl>
