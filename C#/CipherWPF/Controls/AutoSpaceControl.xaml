<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:Metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:Controls="clr-namespace:Cipher.WPF.Controls"
	xmlns:WPF="clr-namespace:Cipher.WPF" x:Name="userControl" x:Class="Cipher.WPF.Controls.AutoSpaceControl"
	mc:Ignorable="d"
	d:DesignWidth="500" d:DesignHeight="100">

    <UserControl.Resources>
        <WPF:StringLengthToBooleanConverter x:Key="StringLengthToBoolean"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock x:Name="ErrorMessages" Margin="0,5,0,125" TextWrapping="Wrap" Foreground="Red" TextAlignment="Right"/>
            <Button x:Name="ToggleProcessing" Content="Add spaces" Margin="0,5" HorizontalAlignment="Right" Width="115" Click="ToggleProcessing_Click" IsEnabled="{Binding Input, Converter={StaticResource StringLengthToBoolean}, ElementName=userControl}" />
        </Grid>

        <Controls:ExtendedTextBox Grid.Row="1"
			x:Name="ResultText" Grid.Column="1"
			Margin="0,0,0,5" Metro:TextboxHelper.Watermark="Result"
        />
        

    </Grid>
</UserControl>