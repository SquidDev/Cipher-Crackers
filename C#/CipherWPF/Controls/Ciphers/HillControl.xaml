<UserControl x:Class="Cipher.WPF.Controls.Ciphers.HillControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="300">
    <Grid>
        <TextBox x:Name="Key" 
             VerticalAlignment="Top" Margin="0,5,115,5" 
             Metro:TextBoxHelper.Watermark="Key (Column Major: a,b;c,d)"
    	/>
        <Metro:NumericUpDown x:Name="KeyLength" 
        	VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,5" Width="100" 
        	Maximum="5" Minimum="2" Interval="1" Value="2" 
    	/>
		<TextBox x:Name="Cribs" 
             VerticalAlignment="Top" Margin="0,35,0,0" 
             Metro:TextBoxHelper.Watermark="Cribs (Cipher:Plain, separated by ';')"
    	/>
    </Grid>
</UserControl>
